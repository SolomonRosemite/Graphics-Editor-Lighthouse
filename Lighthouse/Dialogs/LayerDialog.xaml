<Window x:Class="Lighthouse.Dialogs.LayerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lighthouse.Dialogs"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Layer Settings" Height="500" Width="500">
    <Grid>
        <Label Content="Layer Settings" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" />
        <Label Content="LayerName: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="59,47,0,0" />
        <TextBox TextWrapping="NoWrap" AcceptsReturn="False" Text="{Binding Path=LayerName, Mode=TwoWay}" VerticalAlignment="Top" Margin="59,78,0,0" BorderThickness="1" HorizontalAlignment="Left" Width="174" />

        <Button Click="OnApplyClick" Width="60" Height="20" Content="Apply" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,100,20" />
        <Button Click="OnDiscardClick" Width="60" Height="20" Content="Discard" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="100,0,0,20" />
    </Grid>
</Window>
